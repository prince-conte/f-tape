
.video-block
    position relative
    display block
    margin 30px 0
    
    &_body-video
        position relative
        float-w(120%)
        height 760px
        margin-left -10%
        overflow hidden

    &_video
        position: absolute;
        top: 50%;
        left: 50%;
        width: auto;
        height: 100%;
        width: auto;
        z-index: -100;
        transform: translateX(-50%) translateY(-50%); 
        background-size: cover;
        transition: 1s opacity;
        z-index 98
    

  